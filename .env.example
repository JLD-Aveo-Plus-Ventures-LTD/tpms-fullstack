# Database Configuration
# The hostname or IP address of your database server.
# Use 127.0.0.1 for localhost to avoid DNS resolution issues.
DB_HOST=127.0.0.1

# The username for the database connection.
DB_USER=root

# The password for the database user. Leave it blank if no password is required.
DB_PASSWORD=

# The name of the database your application will use.
DB_NAME=ticket_payment_db

# The port number for your database. Default for MySQL is 3306.
DB_PORT=3306

# JWT (JSON Web Token) Configuration
# A secret key used to sign and verify JWT tokens.
# Make sure to replace "your_generated_jwt_secret_key_here" with a secure key.
JWT_SECRET=your_generated_jwt_secret_key_here
